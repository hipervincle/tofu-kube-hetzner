{
  "image": "ghcr.io/hipervincle/tofu-kube-hetzner:1.0.1",
  "customizations": {
    "vscode": {
      "extensions": [
        "pkief.material-icon-theme",
        "sonarsource.sonarlint-vscode",
        "yzhang.markdown-all-in-one",
        "ms-azuretools.vscode-containers",
        "github.vscode-github-actions",
        "gruntfuggly.todo-tree",
        "hashicorp.terraform"
      ],
      "settings": {
        "sonarlint.ls.javaHome": "/usr/lib/jvm/java-25-openjdk-amd64",
        "sonarlint.pathToNodeExecutable": "/usr/bin/node",
        "workbench.colorTheme": "Perplexity Theme",
        "workbench.iconTheme": "material-icon-theme",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "zsh": {
          "path": "zsh"
        }
      }
    }
  },
  // Ensure the devcontainer starts with a predictable hostname and HOSTNAME env var
  "runArgs": [
    "--hostname=trixie-devcontainer"
  ],
  "mounts": [
    "type=bind,source=${localEnv:HOME}${env:USERPROFILE}/.ssh,target=/root/.ssh",
    "type=bind,source=${localEnv:HOME}${env:USERPROFILE}/.zshrc,target=/root/.zshrc",
    "type=bind,source=${localEnv:HOME}${env:USERPROFILE}/.p10k.zsh,target=/root/.p10k.zsh",
    "type=bind,source=/usr/share/omz,target=/usr/share/omz",
    "type=bind,source=/usr/share/fonts,target=/usr/share/fonts"
  ]
}